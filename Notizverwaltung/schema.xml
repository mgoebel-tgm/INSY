<?xml version="1.0" encoding="UTF-8"?>
<database name="notizen" defaultIdMethod="native">
  <table name="notiz" phpName="Notiz">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="text" type="varchar" size="1000" required="true"/>
    <column name="betreff" type="varchar" size="250" required="true"/>
    <column name="datum" type="date" required="true"/>
  </table>

  <table name ="person" phpName="Person">
    <column name="name" type="varchar" size="250" required="true" primaryKey="true"/>
    <column name="beschreibung" type="varchar" size="1000" required="false"/>
  </table>

  <table name ="todonotiz" phpName="ToDoNotiz">
    <column name="status" type="varchar" size="250" required="true"/>
    <column name="prioritaet" type="integer"/>
  </table>

  <table name ="rezept" phpName="Rezept">
  </table>

  <table name ="projekt" phpName="Projekt">
    <column name="name" type="varchar" size="250" required="true" primaryKey="true"/>
    <column name="startdatum" type="date" required="true"/>
    <column name="enddatum" type="date" required="true"/>
  </table>

</database>  
